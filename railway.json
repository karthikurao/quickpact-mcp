{
  "build": {
    "commands": ["pip install -r requirements.txt"]
  },
  "deploy": {
    "cmd": "python quickpact_mcp_server.py",
    "healthcheckPath": "/mcp",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "PYTHONPATH": "/app",
        "PORT": "8086"
      }
    }
  }
}
